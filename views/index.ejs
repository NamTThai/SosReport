<!DOCTYPE HTML>
<html>
<head>
  <title>SosReport</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Jquery -->
  <script src="bower_components/jquery/dist/jquery.min.js"></script>

  <!-- Fonts -->
  <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Raleway" type="text/css">

  <!--  Load webcomponents-lite.min.js for polyfill support. -->
  <script src="bower_components/webcomponentsjs/webcomponents-lite.min.js"></script>

  <!-- Normailze stylesheet for cross-browser support -->
  <link rel="stylesheet" src="http://normalize-css.googlecode.com/svn/trunk/normalize.css">

  <!-- Server variables -->
  <script>
    var route = "<%= route %>";
  </script>

  <!-- Components, Styles and Scripts import -->
  <link rel="import" href="components/components.vulcanized.html">
  <link rel="stylesheet" href="stylesheets/styles.css">
  <script src="javascripts/scripts.js"></script>

  <!-- My components in development, until sourcemaps support vulcanize -->
  <link rel="import" href="components/custom-style.html">
  <link rel="import" href="components/query-holder.html">
  <link rel="import" href="components/result-table.html">

</head>
<body class="fullbleed layout vertical">
  <template class="event-listener" is="dom-bind">
    <paper-drawer-panel class="drawer-panel">
      <div drawer>
        <paper-toolbar class="drawer-toolbar">
          <span class="drawer-toolbar-menu">Menu</span>
        </paper-toolbar>
        <paper-menu attr-for-selected="data-route" selected="{{route}}">
          <paper-item data-route="search" on-click="eDrawerItemClick">Search</paper-item>
        </paper-menu>
      </div>
      <paper-scroll-header-panel main condenses keep-condensed-header on-paper-header-transform="eHeaderTransform">
        <paper-toolbar id="mainToolbar" class="tall">
          <paper-icon-button icon="menu" paper-drawer-toggle></paper-icon-button>
          <div class="middle middle-container center horizontal layout">
            <span class="app-name">ScreenConnect Report</span>
          </div>
          <div class="bottom bottom-container center horizontal layout">
            <div class="bottom-title paper-font-subhead">CIO Solutions</div>
          </div>
        </paper-toolbar>
        <div class="content">
          <iron-pages attr-for-selected="data-route" selected="{{route}}">
            <section data-route="search">
              <div id="commands" class="row">
                <div class="col-3"></div>
                <paper-fab class="status-fab" icon="search" on-click="eSearch" mini></paper-fab>
                <paper-fab class="status-fab" icon="file-download" on-click="eExport" mini></paper-fab>
                <span id="status">Status</span>
              </div>
              <query-holder query-title="WorkStation"></query-holder>
              <query-holder query-title="Domain"></query-holder>
              <query-holder query-title="User"></query-holder>
              <result-table></result-table>
            </section>
          </iron-pages>
        </div>
      </paper-scroll-header-panel>
    </paper-drawer-panel>
  </template>
</body>
</html>
